  color: #fff;
  font-weight: bold;
  background: #febb2d;
  word-break: break-all;
  position: relative;
}

.word-container .delete {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  position: absolute;
  top: 0;
  right: 0;
  transform: translate(50%, -50%);
}

.word-container .delete .delete-line {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #eee;
  position: relative;
}

.word-container .delete .delete-line::before {
  content: "";
  width: 2px;
  height: 20rpx;
  background-color: #666;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
}

.word-container .delete .delete-line::after {
  content: "";
  width: 2px;
  height: 20rpx;
  background-color: #666;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(-45deg);
}

