/* searchlist.wxss */
.searchBox{
	height:100%;
}
.grade_listBox{
	position:fixed;
	left:0;
	top:0;
	width:100%;
	height:100%;
	z-index:2;
}
.mask{
	width:100%;
	height:100%;
	background-color:rgba(0,0,0,0.2);
}
/*年级列表样式  */
.not_show{
  display: none;
}

.grade_list{
  position: absolute;
  top:200rpx;
  left:75rpx;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  /* margin: 200rpx auto 0 auto; */
  padding: 100rpx 0;
  width: 600rpx;
  background-color: #eee;
  border-radius: 12rpx;
  z-index: 5;
}

.list{
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  width: 540rpx;
}

.list view{
  width: 245rpx;
  height: 80rpx;
  margin-top: 40rpx;
  font-size: 16px;
  line-height: 80rpx;
  text-align: center;
  background-color: #fff;
  border: 1rpx solid #333;
  border-radius: 6rpx;
}

/*书籍列表  */
page{
  height: 100%;
}
view{
  box-sizing: border-box;
}
.page-list {
  height: 100%;
  width: 100%;
  position: relative;
  background-color: #EBF4F3;
}

.choose_grade{
  width: 140rpx;
  margin: 20rpx 30rpx 0 0;
  padding: 15rpx 0;
  color: #fff;
  text-align: center;
  background: #1FC784;
  border-radius: 12rpx;
}

.book-list {
  padding: 12px 10px 10px 10px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
}

.book-list .item .item-delete {
  position: absolute;
  z-index: 1;
  width: 35px;
  height: 35px;
  margin-left: -10px;
  margin-top: -10px;
}

.book-list .item .item-delete image {
  width: 30px;
  height:30px;
}

.book-list .item {
  width: 33.33%;
  text-align: center;
  padding: 10px;
}

.book-list .item-content {
  position: relative;
  box-shadow: 0 0 5px 2px #eee;
  background-color: #fff;
}

.book-list .item .item-content .icon-view {
  padding: 5px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.book-list .item .item-content .icon {
  width: 100%;
  height: 120px;
}

.book-list .item .text-view {
  font-size: 12px;
  line-height: 15px;
  padding: 10px 0px 0px 0px;
  color: #777;
}

.book-img {
  background-size: 100% auto;
}

.exiting{
  position: absolute;
  bottom: 0;
  padding: 8rpx;
  width: 100%;
  color: #666;
  text-align: center;
  background-color: #1FC784;
}