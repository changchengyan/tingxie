.list-top {
  position: fixed;
  top: 0px;
  left: 0px;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  width: 100%;
  height: 50pt;
  color: #666;
  font-size: 16px;
  line-height: 50pt;
  background-color: #dafaf4;
  z-index: 1;
}
.list-top-area{
  width: 100%;
  height: 50pt;
}
