/*书桌样式  */

.container {
  display: block;
}

view {
  box-sizing: border-box;
}

.page-list {
  height: 100%;
  width: 100%;
  position: absolute;
  background-color: #e8e8e8;
}

.flex-body {
  display: flex;
  flex-direction: column;
}

.flex-body .book-scan {
  position: relative;
  font-size: 12pt;
  padding: 140px 0px 20px 0px;
  color: #777;
  text-align: center;
}

.flex-body .book-scan .text-view {
  padding: 15px 0px 10px 0px;
  color: #999;
  font-size: 12px;
}

.flex-body .scan-icon {
  width: 80px;
  height: 70px;
}

.flex-body .info-view {
  text-align: center;
}

.flex-body .scan-info {
  width: 197px;
  height: 210px;
}

.user-count-info {
  padding: 20px 0px 20px 0px;
  text-align: center;
  font-size: 12px;
  color: #999;
}

.flex-body .book-desk {
  background-color: #d9bef7;
  font-size: 12pt;
  padding: 30% 0px 30% 0px;
  color: #777;
  text-align: center;
}

.book-add-area {
  height: 138rpx;
  background-color: #dafaf4;
  text-align: center;
  position: fixed;
  z-index: 2;
  top: 0px;
  left: 0px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 0 15px;
  align-items: center;
}

.book-add-area .book-count {
  color: #fff;
}

.f-book-count {
  font-size: 30px;
}

.f-book-count image{
  width: 175rpx;
  height: 88rpx;
}

.book-add-area .book-scan {
  text-align: center;
}

.book-scan image {
  width: 115rpx;
  height: 92rpx;
  display:block;
}

/*.book-count .text{
  font-size: 14px;
  line-height: 18px;
}*/

.book-add-area .book-scan .text {
  padding: 3px 0px 0px 0px;
  font-size: 12px;
  color: #777;
  line-height: 12px;
}

.book-add-area-visibility {
  height: 138rpx;
  text-align: center;
  padding: 20pt 0pt 0pt 0pt;
  color: #999;
}

