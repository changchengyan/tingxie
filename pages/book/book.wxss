  background-size: cover;
}

.unit-star-1 view:nth-child(2), .unit-star-1 view:nth-child(3) {
  width: 38rpx;
  height: 38rpx;
  background: url(http://image.chubanyun.net/images/Dictation/book/unstar.png);
  background-size: cover;
}

.unit-star-0 view {
  width: 38rpx;
  height: 38rpx;
  background: url(http://image.chubanyun.net/images/Dictation/book/unstar.png);
  background-size: cover;
}

.mask {
  position: fixed;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.5);
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
}

