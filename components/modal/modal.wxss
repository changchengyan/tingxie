/*modal*/

.modal {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 999;
}

.modal .wrapper {
  background-color: #fff;
  /* border-radius: 34rpx; */
  width: 450rpx;
  min-height: 500rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  padding: 0 30rpx;
  text-align: center;
  color: rgb(51, 51, 51);
}

.modal .wrapper .title {
  height: 140rpx;
  line-height: 180rpx;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 600;
}

.modal .wrapper .img {
  width: 200rpx;
  height: 220rpx;
  margin-top: 50rpx;
}

.modal .wrapper .choose-bar {
  display: flex;
  justify-content: space-between;
  /* height: 80rpx;
  box-sizing: border-box; *//* align-items: center;  *//* border-top: 1rpx solid rgb(238, 238, 238); */
}

.modal .wrapper .choose-bar view {
  width: 45%;
  /* position: relative; */
  font-size: 28rpx;
  bottom: 0;
}

.modal .wrapper .choose-bar view.submit {
  background-color: rgb(56, 150, 234);
  height: 50rpx;
  line-height: 50rpx;
  border: 1px solid rgb(56, 150, 234);
  border-radius: 5rpx;
  color: #fff;
  font-family: Microsoft YaHei;
  font-weight: bold;
}

.modal .wrapper .choose-bar view.cancel {
  height: 50rpx;
  line-height: 50rpx;
  border: 1px solid #eee;
  border-radius: 5rpx;
  font-family: Microsoft YaHei;
  font-weight: bold;
}

